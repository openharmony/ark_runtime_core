.function i32 foo1(i32 a0){
    newarr v1, a0, i32[]
    movi v0, 0       #loop_counter
    movi v2, 0       #sum
    lda v0
loop:
    jeq a0, loop_exit
    ldai 1
    starr v1, v0
    lda v0
    ldarr v1
    add2 v2
    sta v2
    inci v0, 1
    lda v0
    jmp loop
loop_exit:
    lda a0
    addi 2
    sta a0
    call.short foo2, a0, v2
    add2 v2
    return
}

