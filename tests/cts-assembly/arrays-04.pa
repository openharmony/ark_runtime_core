#         properties: [acc_read, acc_write, float]
#   - title: Store to array
#     description: >
#       Store accumulator content into array slot pointed by index.
#     instructions:
#       - sig: fstarr.32 vs1, vs2
#         format: [op_vs1_4_vs2_4]
#         type: f32
#         dtype: none
#         etype: f32
#         properties: [acc_read, float]

#assert that operations with array of f32 works fine
#i32 i;
#for(i=0; i<7; i++) array[i]=(float)i;
#for(i=6; i>=0; i--) assert_eq((float)i, array[i]);

.function u1 main(){
    movi v0, 7
    newarr v1, v0, f32[]
    movi v2, 0
    ldai 0
loop:
    jeq v0, loop_exit
    i32tof32
    fstarr.32 v1, v2
    inci v2, 1
    lda v2
    jmp loop
loop_exit:
    subi 1
    sta v2
loop2:
    jltz loop2_exit
    lda v2
    i32tof32
    sta v3
    lda v2
    fldarr.32 v1
    fsub2 v3
    sta v3
    call.short abs, v3, v3
    sta v3
    fldai 1e-6
    fcmpl v3
    jlez exit_failure
    inci v2, -1
    lda v2
    jmp loop2
loop2_exit:
    ldai 0
    return
exit_failure:
    ldai 1
    return
}

.function f32 abs(f32 a0){
    fldai 0.0
    fcmpl a0
    jlez label
    lda a0
    fneg
    return
label:
    lda a0
    return
}

