# Assert that operations stobj, stobj.64 work fine

.record Asm {
    i32 asm1
    i64 asm2
    f64 asm3
}

.function void Asm.Construct(Asm a0) <ctor> {
    ldai 0xFFFFFFFF
    stobj a0, Asm.asm1

    ldai.64 0xFFFFFFFFFFFFFFFF
    movi.64 v0, 32
    shl2.64 v0
    stobj.64 a0, Asm.asm2

    fldai.64 1.0
    stobj.64 a0, Asm.asm3

    return.void
}

.function u1 main() {
    initobj.short Asm.Construct
    sta.obj v0
    ldai 0
    return
}
