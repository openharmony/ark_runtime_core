# Assert that operation initobj.short works fine

.record R {
    i32 field1
    i32 field2
}

.function void R.ctor(R a0, i32 a1, i32 a2) <ctor> {
    lda a1
    stobj a0, R.field1
    lda a2
    stobj a0, R.field2
    return.void
}

.function u1 main() {
    movi v0, 10
    movi v1, 20
    initobj.short R.ctor, v0, v1
    sta.obj v2
    ldobj v2, R.field1
    jne v0, error1
    ldobj v2, R.field2
    jne v1, error2
    ldai 0
    return
error1:
    ldai 1
    return
error2:
    ldai 2
    return
}
