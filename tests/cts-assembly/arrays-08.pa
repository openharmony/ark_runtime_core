#--- 
#   - title: Load from array
#     description: >
#       Load an element from array using accumulator as an index and puts it into accumulator.
#       If element size is smaller then 32 bits, it will be zero or sign extended (depending on bytecode)
#       to i32.
#     properties:
#       - acc_read
#       - acc_write
#     pseudo: |
#       if vs == null then
#         throw NullPointerException
#       end
#       if acc < 0 || acc >= len(vs) then
#         throw ArrayIndexOutOfBoundsException
#       end
#       if op == fldarr.32 then
#         acc = f32tof64(vs[acc])
#       else if op == ldarr.8 then
#         acc = i8toi32(vs[acc])
#       else if op == ldarru.8 then
#         acc = u8toi32(vs[acc])
#       else if op == ldarr.16 then
#         acc = i16toi32(vs[acc])
#       else if op == ldarru.16 then
#         acc = u16toi32(vs[acc])
#       else
#         acc = vs[acc]
#       end
#     instructions:
#       - sig: ldarru.16 vs
#         format: [op_vs_8]
#         type: obj
#         dtype: i32
#         etype: u16

# assert that operation ldarru.16 works fine
.function u1 main() {
    movi v0, 10
    newarr v1, v0, u16[]
    movi v2, 0
    ldai 65000
    starr.16 v1, v2
    ldai 0
    ldarru.16 v1
    u32toi64
    sta.64 v0
    ldai.64 65000
    cmp.64 v0
    jnez exit_failure
    ldai 0
    return
exit_failure:
    ldai 1
    return
}
