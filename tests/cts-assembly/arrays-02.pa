#assert that operations with array of i32 works fine
#i32 i;
#for(i=0; i<5; i++) array[i]=i;
#for(i=4; i>=0; i--) assert_eq(i, array[i]);

.function u1 main(){
    movi v0, 5
    newarr v1, v0, i32[]
    movi v2, 0
    ldai 0
loop:
    jeq v0, loop_exit
    starr v1, v2
    inci v2, 1
    lda v2
    jmp loop
loop_exit:
    subi 1
    sta v2
loop2:
    jltz loop2_exit
    ldarr v1
    jne v2, exit_failure
    inci v2, -1
    lda v2
    jmp loop2
loop2_exit:
    ldai 0
    return
exit_failure:
    ldai 1
    return
}

