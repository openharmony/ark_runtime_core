#Assert that intrinsic Math.absF64 works fine
.record Math <external>
.function f64 Math.absF64(f64 a0)<external>
.function u1 main(){
    fmovi.64 v0, 2.0
    fmovi.64 v1, 1e-13
    call.short Math.absF64, v0, v0
    fsub2.64 v0
    sta.64 v2
    call.short abs, v2, v2
    fcmpl.64 v1
    jgtz exit_failure
    fmovi.64 v0, -2.0
    call.short Math.absF64, v0, v0
    fadd2.64 v0
    sta.64 v2
    call.short abs, v2, v2
    fcmpl.64 v1
    jgtz exit_failure
    ldai 0
    return
exit_failure:
    ldai 1
    return
}

.function f64 abs(f64 a0){
    fldai.64 0.0
    fcmpl.64 a0
    jlez label
    lda.64 a0
    fneg.64
    return.64
label:
    lda.64 a0
    return.64
}

