ohos_static_library("libc_secstatic") {
  sources = libsec_sources
  public_configs = [ ":libsec_public_config" ]
  cflags = [
    "-D_INC_STRING_S",
    "-D_INC_WCHAR_S",
    "-D_SECIMP=//",
    "-D_STDIO_S_DEFINED",
    "-D_INC_STDIO_S",
    "-D_INC_STDLIB_S",
    "-D_INC_MEMORY_S",
  ]
}

ohos_shared_library("libc_secshared") {
  sources = libsec_sources
  public_configs = [ ":libsec_public_config" ]
  cflags = [
    "-D_INC_STRING_S",
    "-D_INC_WCHAR_S",
    "-D_SECIMP=//",
    "-D_STDIO_S_DEFINED",
    "-D_INC_STDIO_S",
    "-D_INC_STDLIB_S",
    "-D_INC_MEMORY_S",
  ]

  output_extension = "so"
}
